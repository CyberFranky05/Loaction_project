# PostgreSQL Configuration (for Keycloak)
POSTGRES_PASSWORD=change_this_password

# Keycloak Admin Credentials
KEYCLOAK_ADMIN_PASSWORD=change_this_password

# Keycloak Client Secrets
# Keycloak Backend Client Secret
# Pre-configured in realm-import.json as "secret123"
# You can change this later in Keycloak admin console
KEYCLOAK_CLIENT_SECRET=secret123

# JWT Secret (for backend token signing)
JWT_SECRET=change_this_jwt_secret

# Domain Configuration
DOMAIN=yourdomain.com
DOMAIN_WWW=www.yourdomain.com

# Port Configuration
BACKEND_PORT=3000
FRONTEND_PORT=3000
KEYCLOAK_PORT=8080
POSTGRES_PORT=5432
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# SSL Configuration
SSL_EMAIL=your@email.com

# Supabase Configuration
# Get these from: https://supabase.com → Your Project → Settings → API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_ANON_KEY=your_anon_key_here

# CORS Origin (should match your domain)
CORS_ORIGIN=https://yourdomain.com
